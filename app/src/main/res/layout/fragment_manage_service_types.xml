<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageServiceTypesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/redlayoutheader"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/vectorcar" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:fontFamily="@font/fontpoppinsmedium"
                android:text="Manage Service Types"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="5dp"
                android:textSize="35sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>