<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckTaskStatus">


    <FrameLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carenginetodo" />


        <View
            android:id="@+id/viewTint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">



            <TextView
                android:id="@+id/txtEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/agdasima_bold"
                android:gravity="center"
                android:paddingTop="30dp"
                android:lineSpacingMultiplier="0.8"
                android:layout_marginHorizontal="20dp"
                android:text="Your Assigned Tasks"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />

        </LinearLayout>

    </FrameLayout>

    <SearchView
        android:id="@+id/searchTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/txtgradientgtor"
        app:layout_constraintBottom_toTopOf="@+id/svTasks"
        app:layout_constraintEnd_toStartOf="@+id/imgFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"></SearchView>




    <ImageView
        android:id="@+id/imgFilter"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="20dp"
        android:src="@drawable/vector_filterblack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader" />

    <ScrollView
        android:id="@+id/svTasks"
        android:layout_width="409dp"
        android:layout_height="439dp"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTasks">

        <LinearLayout
            android:id="@+id/svlinlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
