<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/redlayoutheader"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgQuoteVector"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:srcCompat="@drawable/vectorquote" />

        <TextView
            android:id="@+id/txtQuoteGenerator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:paddingTop="12dp"
            android:text="Quote Generator"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSelecctCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Customer"
                android:textSize="25sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/spinCustomer"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spingradientgtor"
                app:layout_constraintTop_toBottomOf="@+id/txtSelecctCustomer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:id="@+id/txtServiceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Select Service Type"
                android:textSize="25sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/spinCustomer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/spinQuote"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spingradientgtor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtServiceType"
                app:layout_constraintWidth_default="wrap" />

            <Button
                android:id="@+id/btnServiceTypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Button"
                app:layout_constraintTop_toBottomOf="@+id/spinQuote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtParts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Parts"
                android:textSize="25sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/btnServiceTypes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/edttxtParts"
                android:layout_width="310dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spingradientgtor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtParts"
                app:layout_constraintWidth_default="wrap" />

            <TextView
                android:id="@+id/txtLabourCost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Labour Cost"
                android:textSize="25sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/edttxtParts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/edttxtLabour"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spingradientgtor"
                app:layout_constraintTop_toBottomOf="@+id/txtLabourCost"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:id="@+id/txtFinalQuote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Final Quote"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttxtLabour" />

            <LinearLayout
                android:id="@+id/layoutQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/txtFinalQuote"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </LinearLayout>

            <Button
                android:id="@+id/btnReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutQuote" />

            <TextView
                android:id="@+id/txtRvalue"
                android:layout_width="192dp"
                android:layout_height="32dp"
                android:background="#6DECA0"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layoutQuote" />

            <TextView
                android:id="@+id/txtFinalPrice"
                android:layout_width="27dp"
                android:layout_height="42dp"
                android:text="R"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/txtRvalue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFinalQuote" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>