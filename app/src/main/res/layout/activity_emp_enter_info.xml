<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logincar"
    tools:context=".EmpEnterInfo">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bgseethroughgrey"
            android:padding="24dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/regheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/agdasima_bold"
                android:paddingBottom="60dp"
                android:text="Register"
                android:textColor="@android:color/black"
                android:textSize="80sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albert_sans"
                    android:paddingBottom="8dp"
                    android:text="Profile Picture:"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/ivEmpProfPicture"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/txtSelectImageEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albert_sans"
                    android:paddingTop="4dp"
                    android:paddingBottom="15dp"
                    android:text="Select Image To Upload"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <!-- Text fields with improved hint alignment and gravity -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albert_sans"
                    android:paddingBottom="8dp"
                    android:text="Business Name:"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/txtEmpBusinessName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/txtgradientgtor"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:hint="Please enter your business name"
                    android:gravity="start|center_vertical" />

                <!-- Repeat the above style for all EditTexts -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/albert_sans"
                    android:paddingBottom="8dp"
                    android:text="First Name:"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/txtEmpFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/txtgradientgtor"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:hint="Please enter your first name"
                    android:gravity="start|center_vertical" />

                <!-- Add similar settings for other fields like Last Name, Email, etc. -->

                <Switch
                    android:id="@+id/opIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/albert_sans"
                    android:text="Opt In To Leaderboard"
                    android:checked="true" />

                <Button
                    android:id="@+id/btnRegisterEmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/black"
                    android:padding="12dp"
                    android:text="Register"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminate="true" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
