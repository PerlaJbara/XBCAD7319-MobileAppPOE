<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/home"
android:background="@drawable/carsideprofile"
tools:context=".VehicleMenuFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgseethroughblack"
    android:orientation="vertical">

    <!-- Non-scrollable Header Section -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle
         Menu"
        android:textAlignment="center"
        android:textColor="#D3CDCD"
        android:textSize="65sp"
        android:textStyle="bold" />



    <ScrollView
        android:id="@+id/svVehicleMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Management"
                android:textAlignment="center"
                android:textColor="#D3CDCD"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnRegVehicle"
                android:layout_width="191dp"
                android:layout_height="53dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#787771"
                android:text="Register a Vehicle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelecctCustomer" />

            <Button
                android:id="@+id/btnAddVehicleMake"
                android:layout_width="191dp"
                android:layout_height="53dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#787771"
                android:text="Add Vehicle Versions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelecctCustomer" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inventory Management"
                android:textAlignment="center"
                android:textColor="#D3CDCD"
                android:textSize="25sp"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/btnManageInventory"
                android:layout_width="191dp"
                android:layout_height="53dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#787771"
                android:text="Parts Inventory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelecctCustomer" />



        </LinearLayout>
    </ScrollView>

    <!-- Non-scrollable Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="12dp"/>


    </LinearLayout>

</LinearLayout>

</FrameLayout>
