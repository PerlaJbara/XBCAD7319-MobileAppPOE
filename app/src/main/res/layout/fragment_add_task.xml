<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskFragment">

    <!-- Header Section -->
    <FrameLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgHeader"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/carenginetodo" />

        <View
            android:id="@+id/viewTint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivBackButton"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_gravity="start"
                android:src="@drawable/vectorback" />

            <TextView
                android:id="@+id/txtEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="Add Task"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans"
                android:paddingBottom="4dp"
                android:paddingTop="8dp"
                android:text="Task Name:"
                android:textAlignment="viewStart"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtTaskName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/txtgradientgtor"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="Task Description:"
                android:textAlignment="viewStart"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txtTaskDescriptions"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/txtgradientgtor"
                android:inputType="text" />

            <TextView
                android:id="@+id/charCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="400 words"
                android:textAlignment="viewEnd"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/albert_sans"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"
                android:text="Select A Vehicle:"
                android:textAlignment="viewStart"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spChooseVehicle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/txtgradientgtor" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/btnAddTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/cherryred"
                android:paddingHorizontal="24dp"
                android:textSize="20sp"
                android:paddingVertical="8dp"
                android:text="Add Task" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
