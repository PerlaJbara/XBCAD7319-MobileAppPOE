<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/carexhaustheader"
        android:clipToOutline="true"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:src="@drawable/vectorback"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/txtQuoteOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:paddingTop="45dp"
            android:text="Invoice Generator"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSelectCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Select Customer"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"/>

            <Spinner
                android:id="@+id/spinCustomer"
                android:paddingHorizontal="5dp"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spingradientgtor"
                android:fontFamily="@font/fontpoppinsregular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSelectCustomer"
                app:layout_constraintWidth_default="wrap" />




            <TextView
                android:id="@+id/txtParts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Parts"
                android:fontFamily="@font/poppins"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinCustomer"
                android:textColor="@color/black"/>


            <Spinner
                android:id="@+id/spinPartName"
                android:layout_width="204dp"
                android:layout_height="50dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/spingradientgtor"
                android:hint="Part Name"
                android:padding="8dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtParts" />

            <EditText
                android:id="@+id/edtPartCost"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/spingradientgtor"
                android:hint="Part Price"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:paddingHorizontal="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtParts" />

            <NumberPicker
                android:id="@+id/npStockCounter"
                android:layout_width="63dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.856"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.322" />

            <TextView
                android:id="@+id/txtPartsQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:paddingTop="50dp"
                android:text="Select quantity"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btnAddPart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.235"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinPartName" />

            <Button
                android:id="@+id/btnAddPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/fontpoppinsmedium"
                android:padding="10dp"
                android:text="Add Part"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPartsQuantity" />

            <TextView
                android:id="@+id/txtPartsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="20dp"
                android:text="Parts List"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/btnAddPart" />

            <TextView
                android:id="@+id/txtLabourCost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Labour Cost"
                android:textSize="25sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPartsList" />

            <EditText
                android:id="@+id/edttxtLabour"
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/spingradientgtor"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="numberDecimal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtLabourCost"
                app:layout_constraintWidth_default="wrap" />

            <Button
                android:id="@+id/btnFinalReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Review"
                android:fontFamily="@font/fontpoppinsmedium"
                android:backgroundTint="#038A39"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edttxtLabour" />

            <TextView
                android:id="@+id/txtFinalQuote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Final Quote"
                android:fontFamily="@font/fontpoppinsmedium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnFinalReview" />

            <LinearLayout
                android:id="@+id/layoutQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFinalQuote">

            </LinearLayout>

            <Button
                android:id="@+id/btnReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:visibility="invisible"
                android:text="Review"
                android:fontFamily="@font/fontpoppinsmedium"
                android:backgroundTint="#038A39"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutQuote" />

            <TextView
                android:id="@+id/txtRvalue"
                android:layout_width="192dp"
                android:layout_height="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/greenboderbackground"
                app:layout_constraintTop_toTopOf="@+id/layoutQuote" />

            <TextView
                android:id="@+id/txtFinalPrice"
                android:layout_width="27dp"
                android:layout_height="42dp"
                android:text="R"
                android:textSize="30dp"
                app:layout_constraintEnd_toStartOf="@+id/txtRvalue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFinalQuote" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>