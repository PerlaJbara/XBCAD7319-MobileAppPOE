<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#80000000"
    android:paddingBottom="5dp"
    tools:context=".LeaveApproval">


    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/toolboxv4"
        android:clipToOutline="true"
        android:foregroundTint="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackButton"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:src="@drawable/vectorback" />

        <TextView
            android:id="@+id/txtEmployee"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Approve \nLeave"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="409dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtEmpFullName"
                android:layout_width="350dp"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/txtgradientgtor"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="Leave Type:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtEmpLeaveType"
                android:layout_width="350dp"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/txtgradientgtor"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="Start Date:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtEmpStartDate"
                android:layout_width="350dp"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/txtgradientgtor"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="End Date:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="350dp"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/txtgradientgtor"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:text="Total Duration:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtEmpDuration"
                android:layout_width="350dp"
                android:layout_marginStart="15dp"
                android:layout_height="45dp"
                android:background="@drawable/txtgradientgtor"
                android:fontFamily="@font/poppins"
                android:paddingStart="15dp"
                android:paddingTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivApproveTick"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/vector_greentick" />

            <TextView
                android:id="@+id/labelApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivDenyCross"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/vector_deny" />

            <TextView
                android:id="@+id/labelDeny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deny"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
