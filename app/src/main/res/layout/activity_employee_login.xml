<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logincar"
    tools:context=".EmployeeLogin">


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="639dp"
        android:background="@drawable/bgseethroughgrey"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619">


        <TextView
            android:id="@+id/login_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/agdasima_bold"
            android:paddingBottom="60dp"
            android:text="Login"
            android:textColor="@android:color/black"
            android:textSize="80sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Use The Login Credentials Provided By Employer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/albert_sans"
            android:paddingBottom="8dp"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/txtEmployeeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtgradientgtor"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/albert_sans"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/txtEmployeePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/txtgradientgtor"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnLoginEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="316dp"
            android:layout_height="185dp"
            android:paddingTop="50dp"
            android:text="Powered By Tech Fusion"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
